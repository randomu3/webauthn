# Production Configuration Example for WebAuthn
# Copy this file to .env and modify values for your production environment

# Database Configuration (Use strong passwords in production!)
DB_HOST=your-db-host.com
DB_NAME=webauthn_prod
DB_USER=webauthn_prod_user
DB_PASS=your-super-strong-db-password-here

# WebAuthn Security Configuration
WEBAUTHN_RP_NAME="Your Company WebAuthn"
WEBAUTHN_RP_ID=yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Security Settings (Production Values)
ENABLE_HTTPS_ONLY=true
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
MAX_REGISTRATION_ATTEMPTS=3
REGISTRATION_LOCKOUT_MINUTES=10

# Session Configuration (Secure Production Settings)
SESSION_LIFETIME_MINUTES=30
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=Strict
SESSION_DOMAIN=yourdomain.com

# Recovery Settings
RECOVERY_CODES_COUNT=10
EMERGENCY_TOKEN_LIFETIME_HOURS=24
ENABLE_EMAIL_RECOVERY=true
RECOVERY_EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Cryptographic Settings
ENCRYPTION_KEY=your-32-byte-encryption-key-here
HMAC_SECRET=your-hmac-secret-key-here

# Logging and Monitoring
LOG_LEVEL=WARN
LOG_SECURITY_EVENTS=true
LOG_FAILED_ATTEMPTS=true
LOG_FILE_PATH=/var/log/webauthn/security.log

# Production Environment
ENVIRONMENT=production
DEBUG_MODE=false

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Additional Security Headers
CSP_REPORT_URI=https://yourdomain.com/csp-report
HSTS_MAX_AGE=31536000

# Monitoring and Alerting
ENABLE_INTRUSION_DETECTION=true
ALERT_EMAIL=security@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Database Security
DB_SSL_MODE=require
DB_SSL_CERT=/path/to/db-ssl-cert.pem
DB_CONNECTION_TIMEOUT=10
DB_MAX_CONNECTIONS=20

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
