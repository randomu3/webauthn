# Конфигурация базы данных
DB_HOST=db
DB_NAME=webauthn_db
DB_USER=webauthn_user
DB_PASS=webauthn_pass

# Конфигурация MySQL для Docker
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=webauthn_db
MYSQL_USER=webauthn_user
MYSQL_PASSWORD=webauthn_pass

# Конфигурация Apache
APACHE_DOCUMENT_ROOT=/var/www/html/public

# Порты для Docker
WEB_PORT=8080
DB_PORT=3306

# Режим разработки
APP_ENV=development
APP_DEBUG=true

# WebAuthn настройки
WEBAUTHN_RP_NAME="WebAuthn Demo"
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:8080

# Настройки сессий
SESSION_LIFETIME=86400
